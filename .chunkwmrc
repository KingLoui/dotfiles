#!/bin/bash

chunkc core::plugin_dir /usr/local/opt/chunkwm/share/chunkwm/plugins

# chunkwm-tiling
# ----------------------------------------------------------------------------
chunkc set global_desktop_mode           bsp

chunkc set global_desktop_offset_top     53
chunkc set global_desktop_offset_bottom  30
chunkc set global_desktop_offset_left    30
chunkc set global_desktop_offset_right   30
chunkc set global_desktop_offset_gap     15

chunkc set 7_desktop_offset_top        23
chunkc set 7_desktop_offset_bottom     0
chunkc set 7_desktop_offset_left       0
chunkc set 7_desktop_offset_right      0
chunkc set 7_desktop_offset_gap        0
chunkc set 8_desktop_offset_top        23
chunkc set 8_desktop_offset_bottom     0
chunkc set 8_desktop_offset_left       0
chunkc set 8_desktop_offset_right      0
chunkc set 8_desktop_offset_gap        0


chunkc set desktop_padding_step_size     10.0
chunkc set desktop_gap_step_size         5.0

chunkc set bsp_spawn_left                1
chunkc set bsp_optimal_ratio             1.0
chunkc set bsp_split_mode                optimal
chunkc set bsp_split_ratio               0.5

chunkc set window_focus_cycle            monitor
chunkc set window_float_next             0
chunkc set window_float_center           1
chunkc set window_region_locked          1

chunkc set focused_border_color          0x00ffffff
chunkc set preselect_border_color        0x00ffffff
chunkc set preselect_border_width        4
chunkc set preselect_border_radius       4

chunkc set window_float_topmost          0
chunkc set window_fade_inactive          0
chunkc set window_fade_alpha             0.85
chunkc set window_fade_duration          0.25
chunkc set window_use_cgs_move           0

# load plugins
# ----------------------------------------------------------------------------

chunkc core::load tiling.so
chunkc core::load border.so
#chunkc core::load purify.so

# tiling rules - must come after plugin load
# ----------------------------------------------------------------------------

chunkc tiling::rule -s float -o Finder                  -n Kopieren
chunkc tiling::rule -s float -o Finder                  -n Papierkorb
chunkc tiling::rule -s float -o Finder                  -n \"Infos zu:\"
chunkc tiling::rule -s float -o Archivierungsprogramm   -n Archivierungsprogramm
chunkc tiling::rule -s float -o Mail                    -n \"Neue E-Mail\"
chunkc tiling::rule -s float -o Mail                    -n \"Re:\"
chunkc tiling::rule -s float -o iTunes                  -n \"Titelinformationen\"
chunkc tiling::rule -s float -o iTunes                  -n \"Informationen zu mehreren Titeln\"
